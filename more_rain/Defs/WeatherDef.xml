<?xml version="1.0" encoding="UTF-8"?>
<Defs>
  <WeatherDef>
    <defName>sodaRain</defName>
    <label>Soda Rain</label>
    <description>Orange soda falling from the sky</description>
    <snowRate>1.6</snowRate>
    <isBad>true</isBad>
    <windSpeedFactor>3</windSpeedFactor>
    <accuracyMultiplier>0.3</accuracyMultiplier>
    <favorability>Neutral</favorability>
    <perceivePriority>1</perceivePriority>
    <rainRate>1</rainRate>
    <moveSpeedMultiplier>0.3</moveSpeedMultiplier>
    <durationRange>
      <min>5000</min>
      <max>7000</max>
    </durationRange>
    <ambientSounds>
      <li>Ambient_Rain</li>
    </ambientSounds>
    <exposedThought>AbligerSodaRain</exposedThought>
    <overlayClasses>
      <li>abliger.WeatherOverlay_SodaRain</li>
    </overlayClasses>
    <commonalityRainfallFactor>
      <points>
        <li>(0, 0)</li>
        <li>(1300, 1)</li>
        <li>(2000, 3.0)</li>
      </points>
    </commonalityRainfallFactor>
    <!-- Colors are Overcast -->
    <skyColorsDay>
      <sky>(0.8,0.8,0.8)</sky>
      <shadow>(0.92,0.92,0.92)</shadow>
      <overlay>(0.7,0.7,0.7)</overlay>
      <saturation>0.9</saturation>
    </skyColorsDay>
    <skyColorsDusk>
      <sky>(1,1,1)</sky>
      <shadow>(0.92,0.92,0.92)</shadow>
      <overlay>(0.6,0.6,0.6)</overlay>
      <saturation>0.9</saturation>
    </skyColorsDusk>
    <skyColorsNightEdge>
      <sky>(0.35,0.40,0.45)</sky>
      <shadow>(0.92,0.92,0.92)</shadow>
      <overlay>(0.5,0.5,0.5)</overlay>
      <saturation>0.9</saturation>
    </skyColorsNightEdge>
    <skyColorsNightMid>
      <sky>(0.35,0.40,0.45)</sky>
      <shadow>(0.92,0.92,0.92)</shadow>
      <overlay>(0.5,0.5,0.5)</overlay>
      <saturation>0.9</saturation>
    </skyColorsNightMid>
  </WeatherDef>


  <ThoughtDef>
    <defName>AbligerSodaRain</defName>
    <durationDays>1.1</durationDays>
    <stackLimit>1</stackLimit>
    <stages>
      <li>
        <label>soda rain</label>
        <description>Free soda to drink.</description>
        <baseMoodEffect>5</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>

